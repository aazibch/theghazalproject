extends baseEmail

block content
    p Hi #{ fullName },
    p Welcome to 
      a(href=`${siteUrl}`, target='_blank') The Ghazal Project
      | . We're glad to have you onboard.
    p To enjoy all the features on the platform, please confirm your email address.
    table.btn.btn-primary(
        role='presentation',
        border='0',
        cellpadding='0',
        cellspacing='0'
    )
        tbody
            tr
                td(align='left')
                    table(
                        role='presentation',
                        border='0',
                        cellpadding='0',
                        cellspacing='0'
                    )
                        tbody
                            tr
                                td
                                    a(href=`${confirmEmailUrl}`, target='_blank') Confirm Email
    p - The Team at 
      span.signature The Ghazal Project
